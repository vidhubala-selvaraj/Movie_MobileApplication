<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/watchlist_card"
        android:background="@color/white"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:cardCornerRadius="15dp"
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:padding="15dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">


            <ImageView
                android:id="@+id/watchlist_poster"
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:foreground="@drawable/layout_gradient"
                android:scaleType="fitXY"
                android:src="@drawable/ic_theaters_white_18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/watchlist_media_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="TV"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/watchlist_poster"
                app:layout_constraintEnd_toStartOf="@+id/remove_image"
                app:layout_constraintHorizontal_bias="0.222"
                app:layout_constraintStart_toStartOf="@+id/watchlist_poster">

            </TextView>

            <ImageView
                android:id="@+id/remove_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="160dp"
                android:layout_marginLeft="160dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_baseline_remove_circle_outline_24"
                app:layout_constraintBottom_toBottomOf="@+id/watchlist_poster"
                app:layout_constraintEnd_toEndOf="@+id/watchlist_poster"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/watchlist_poster" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>